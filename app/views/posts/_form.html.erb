<% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <strong><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</strong>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content_text %>
      <%= f.text_area(:content_text, cols: 40, rows: 5, class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= f.label :user_id %>
      <%= collection_select(:post, :user_id, User.all, :id, :name_with_initial, {}, {class: 'form-control'}) %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
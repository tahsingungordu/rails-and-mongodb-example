<%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content_text %>
      <%= f.text_field :content_text, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :user_id %>
      <%= collection_select(:post, :user_id, User.all, :id, :name_with_initial, prompt: true) %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
<% end %>